<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginStart="@dimen/five_dp"
    app:cardElevation="@dimen/twenty_dp"
    app:cardBackgroundColor="@color/popup_card_bg"
    app:cardCornerRadius="@dimen/ten_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/twenty_dp">

    <com.gisass.browser.customFontViews.CustomTextviewRegular
        android:id="@+id/buzzmateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/ten_dp"
        android:text="@string/buzzmate_ads"
        android:textColor="@android:color/black"
        android:textSize="@dimen/eighteen_sp" />

    <com.gisass.browser.customFontViews.CustomTextviewRegular
        android:id="@+id/gisassTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/ten_dp"
        android:text="@string/gisass_advertisement"
        android:textColor="@android:color/black"
        android:textSize="@dimen/eighteen_sp" />

    <com.gisass.browser.customFontViews.CustomTextviewRegular
        android:id="@+id/browserTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/ten_dp"
        android:text="@string/browser_ads"
        android:textColor="@android:color/black"
        android:textSize="@dimen/eighteen_sp" />

</LinearLayout>
</androidx.cardview.widget.CardView>