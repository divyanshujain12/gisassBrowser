<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/five_dp"
    app:cardBackgroundColor="@color/popup_card_bg"
    app:cardCornerRadius="@dimen/ten_dp"
    app:cardElevation="@dimen/twenty_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/twenty_dp">

        <com.gisass.browser.customFontViews.CustomTextviewRegular
            android:id="@+id/buzzmateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dp"
            android:gravity="center"
            android:drawablePadding="@dimen/ten_dp"
            android:drawableStart="@drawable/buzzmate"
            android:text="@string/buzzmate_ads"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen_sp" />

        <com.gisass.browser.customFontViews.CustomTextviewRegular
            android:id="@+id/gisassTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dp"
            android:gravity="center"
            android:drawablePadding="@dimen/ten_dp"
            android:text="@string/gisass_advertisement"
            android:drawableStart="@drawable/advertisement"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen_sp" />

        <com.gisass.browser.customFontViews.CustomTextviewRegular
            android:id="@+id/browserTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dp"
            android:gravity="center"
            android:drawablePadding="@dimen/ten_dp"
            android:text="@string/browser_ads"
            android:drawableStart="@drawable/advertisement"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen_sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>